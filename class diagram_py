# Clase Punto
class Punto:

    # Propiedad x
    @property
    def x(self):
        return self.__x
    
    @x.setter
    def x(self, value):
        self.__x = value
    
    # Propiedad y
    @property
    def y(self):
        return self.__y
    
    @y.setter
    def y(self, value):
        self.__y = value

    # Constructor
    def __init__(self, x = 0, y = 0):
        self.__x = 0
        self.__y = 0

    # MÃ©todo trasladar
    def trasladar(self, dx, dy):
        self.__x += dx
        self.__y += dy
